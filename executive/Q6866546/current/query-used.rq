SELECT ?statement
       ?item ?name_bn ?name_en
       ?party ?party_name_bn ?party_name_en
       ?district ?district_name_bn ?district_name_en
       ?role ?role_bn ?role_en
       ?start ?end ?facebook
       ?role_superclass ?role_superclass_bn ?role_superclass_en
       ?org ?org_bn ?org_en ?org_jurisdiction
WHERE {
  VALUES ?role_superclass { wd:Q14565638 }
  BIND(wd:Q6866546 AS ?org)
  OPTIONAL {
  ?org rdfs:label ?org_bn
  FILTER(LANG(?org_bn) = "bn")
}

OPTIONAL {
  ?org rdfs:label ?org_en
  FILTER(LANG(?org_en) = "en")
}

  OPTIONAL {
    ?org wdt:P1001 ?org_jurisdiction
  }
  ?item wdt:P31 wd:Q5 ;
        p:P39 ?statement .
  OPTIONAL {
  ?item rdfs:label ?name_bn
  FILTER(LANG(?name_bn) = "bn")
}

OPTIONAL {
  ?item rdfs:label ?name_en
  FILTER(LANG(?name_en) = "en")
}

  ?statement ps:P39 ?role .
  OPTIONAL {
  ?role rdfs:label ?role_bn
  FILTER(LANG(?role_bn) = "bn")
}

OPTIONAL {
  ?role rdfs:label ?role_en
  FILTER(LANG(?role_en) = "en")
}

  ?role wdt:P279* ?role_superclass .
  OPTIONAL {
  ?role_superclass rdfs:label ?role_superclass_bn
  FILTER(LANG(?role_superclass_bn) = "bn")
}

OPTIONAL {
  ?role_superclass rdfs:label ?role_superclass_en
  FILTER(LANG(?role_superclass_en) = "en")
}

  ?role wdt:P361 ?org .
  OPTIONAL {
    ?role p:P1001/ps:P1001 ?district .
    OPTIONAL {
  ?district rdfs:label ?district_name_bn
  FILTER(LANG(?district_name_bn) = "bn")
}

OPTIONAL {
  ?district rdfs:label ?district_name_en
  FILTER(LANG(?district_name_en) = "en")
}

  }
  OPTIONAL { ?statement pq:P580 ?start }
  OPTIONAL { ?statement pq:P582 ?end }
  BIND(COALESCE(?end, "9999-12-31T00:00:00Z"^^xsd:dateTime) AS ?end_or_sentinel)
  FILTER(?end_or_sentinel >= NOW())
  # Find any current party membership:
  OPTIONAL {
    ?item p:P102 ?party_statement .
    ?party_statement ps:P102 ?party .
    OPTIONAL {
  ?party rdfs:label ?party_name_bn
  FILTER(LANG(?party_name_bn) = "bn")
}

OPTIONAL {
  ?party rdfs:label ?party_name_en
  FILTER(LANG(?party_name_en) = "en")
}

    OPTIONAL { ?party_statement pq:P582 ?end_party }
    BIND(COALESCE(?end_party, "9999-12-31T00:00:00Z"^^xsd:dateTime) AS ?party_end_or_sentinel)
    FILTER(?party_end_or_sentinel >= NOW())
  }
  OPTIONAL { ?item wdt:P2013 ?facebook }
} ORDER BY ?item ?role ?district ?start ?end
